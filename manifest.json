{
  "manifest_version": 2,
  "name": "PT站自动签到",
  "version": "1.0",
  "description": "PT站保号,防止被封禁",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "alarms","*://www.hdarea.co/*","*://kp.m-team.cc/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "curtion@126.com"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}